<!--This is the HTML that exists on every page. Yields and ifs posts individual data-->
<!DOCTYPE html>
<html>
  <head>
    <meta name="author" content="Jeremy Edwards" >
		<meta name="description" content="A twitter clone!" >
		<meta name="keywords" content="Twitter, microblog, ideasharing" >
    <title>Microblogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark fixed-top bgColorNav overflow-hidden position-fixed m06" id="ebjNav">
      <div>
    	   <p><%= link_to "Twizzer", root_path, id: "logo", class: "pt-1 pl-0" %></p>
      </div>
      <% if user_signed_in? %>
        <h4><%= link_to "New Post", new_post_path, id: "newPost" %></h4>
        <h4><%= link_to "Logout", destroy_user_session_path, method: :delete, id: "signIn"  %></h4>
      <% else %>
        <h4><%= link_to "Sign in", new_user_session_path, id: "signIn" %></h4>
      <% end %>
    </nav>

    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>

    <div class="alertsDiv">
    <% if notice %>
      <p class="alert alert-success text-center"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger text-center"><%= alert %></p>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
