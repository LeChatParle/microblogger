<div class="mainCommentD">
  <div class="secondaryCD">
    <p style="font-weight: 900; font-size: 2vw;"><%= comment.name %></p>
    <p class="commentBody"><%= comment.body %></p>

    <p style="font-size: 10px">Submitted <%= time_ago_in_words(comment.created_at) %> ago </p>
  </div>

  <p><%= link_to 'Delete', [comment.post, comment], method: :delete, class:
    'button', data: {confirm: 'Are you sure?'}, style: "color: #FFFFFF"%></p>
</div>
